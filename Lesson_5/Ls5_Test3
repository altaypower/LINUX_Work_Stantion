$ echo file1 > file1
$ echo file2 > file2
$ chmod +r file1
$ chmod ug+w file1
$ ls -l file1
    -rw-rw-r-- 1 jb jb 6 авг 29 21:41 file1
численные команды
$ chmod 664 file1
$ ls -l file1
    -rw-rw-r-- 1 jb jb 6 авг 29 21:41 file1

$ chmod u=rw file2
$ ls -l file2
    -rw-r--r-- 1 jb jb 6 авг 29 21:42 file2

$ chmod go-r file2
$ ls -l file2
    -rw------- 1 jb jb 6 авг 29 21:42 file2

$ chmod 600 file2
$ ls -l file2
    -rw------- 1 jb jb 6 авг 29 21:42 file2



